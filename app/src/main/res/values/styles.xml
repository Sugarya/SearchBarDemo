<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GMailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/emailColorPrimary</item>
        <item name="colorPrimaryDark">@color/emailColorPrimaryDark</item>
        <item name="colorAccent">@color/emailColorAccent</item>
    </style>

    <style name="GPlayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/playColorPrimary</item>
        <item name="colorPrimaryDark">@color/playColorPrimaryDark</item>
        <item name="colorAccent">@color/playColorAccent</item>
    </style>

    <style name="YoutubeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/youtubeColorPrimary</item>
        <item name="colorPrimaryDark">@color/youtubeColorPrimaryDark</item>
        <item name="colorAccent">@color/youtubeColorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
