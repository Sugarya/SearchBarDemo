<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sugary.searchviewtest"
          xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GMailSearchActivity"
            android:label="@string/title_activity_gmail_main"
            android:theme="@style/GMailTheme"
            >
        </activity>
        <activity
            android:name=".activity.GPlaySearchActivity"
            android:theme="@style/GPlayTheme"
            >
        </activity>
        <activity
            android:name=".activity.YouTubeMainActivity"
            android:label="@string/title_activity_you_tube"
            android:theme="@style/YoutubeTheme"
            >
        </activity>
        <activity
            android:name=".activity.YoutubeSearchActivity"
            android:theme="@style/YoutubeTheme"
            >
        </activity>
    </application>

</manifest>